<Page x:Class="KTL_game.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KTL_game.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="{StaticResource Height}" d:DesignWidth="{StaticResource Width}"
      Title="StartPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Style="{StaticResource ResourceKey=TitleLabelStyle}">Title</Label>
        <Button Name="StartButton" Grid.Row="2" Style="{StaticResource ResourceKey=MenuButtonStyle}" Click="StartButton_Click">Start</Button>
        <Button Name="SettingsButton" Grid.Row="3" Style="{StaticResource ResourceKey=MenuButtonStyle}" Click="SettingsButton_Click">Settings</Button>
    </Grid>
</Page>
